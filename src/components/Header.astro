---
import HeaderLink from './HeaderLink.astro';
---

<header class="py-3.5" transition:persist>
	<nav class="px-7 flex justify-between flex-row md:space-x-4">

		<div class="flex md:flex-row"> 
			<a id="NameLink" class="hover:underline font-bold text-4xl" href="/">Steven Tam</a>
			<div class="flex space-x-2 items-center m-0 md:mt-3">
				<HeaderLink href="/work">Work</HeaderLink>
				<HeaderLink href="/projects">Projects</HeaderLink>
			</div>
		</div>
		
		<div class="hidden md:flex flex flex-row space-x-3 drop-shadow-md"> 
			<a href="https://github.com/steven-tam" target="_blank" class="flex hover:underline text-lg items-center space-x-1">
				<img src="/src/img/github.svg" alt="github icon" class="h-5 aspect-square" />
				<span>/steven-tam</span>
			</a>
			<a href="https://www.linkedin.com/in/steven-tam-career/" target="_blank" class="flex hover:underline text-lg items-center space-x-1">
				<img src="/src/img/linkedin.svg" alt="linkedin icon" class="h-5 aspect-square" />
				<span>/in/steven-tam-career</span>
			</a>
		</div>
	</nav>
</header><style>
	header {
		margin: 0;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top:0;
		z-index: 3;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 0.6em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
	}
	#NameLink {
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
