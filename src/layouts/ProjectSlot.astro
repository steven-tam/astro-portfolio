---
const { name, start, end, description, sourceUrl, imageUrl, technology } = Astro.props;
---

<div class="m-8 my-16">
    <div class="flex flex-col items-center p-2 gap-2"> 

        <div class="flex justify-center flex-col items-center">
            <div class="flex flex-col w-full items-center">
                <h1 class="text-3xl font-bold">
                    { name }
                </h1>
                <p class="text-lg font-semibold hidden md:flex">{ start } - { end }</p>
            </div>
        </div>
    </div>

    <div class="flex flex-col space-y-6 text-center mt-2 items-center">
        <p class="font-semibold flex md:hidden">{ start } - { end }</p>
        <div class="rounded-md mt-2">
            <p>{ description }</p>
        </div>
        <div>
        <a href={ sourceUrl }> 
            <img class="rounded-md transition-transform transform hover:scale-105" src={ imageUrl } alt='Project'>
        </a>
        </div>
        <div>
            <p><span class="font-bold">Skills:</span> { technology }</p> 
        </div>
    </div>

</div>